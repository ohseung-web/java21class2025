		// 비트 연산자
		int num = 5; // 00000101
		// 왼쪽으로 1bit 이동한 경우 결과값은 num값의 2를 곱한 값이 출력된다.
		System.out.println("num << 1 =>"+(num << 1));
		// num값은 변경되지 않음을 주의하자!
		System.out.print(num + " => ");
		System.out.printf("%s", Integer.toBinaryString(num));
		System.out.println();
		
		// num값을 변경하고 싶다면 
		// System.out.println(num <<= 1);
		System.out.println("num << 2 =>"+(num << 2));
		System.out.printf("%s", Integer.toBinaryString(num << 2));
		System.out.println();
		
		System.out.println("num << 3 =>"+(num << 3));
